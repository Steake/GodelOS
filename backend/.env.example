# GödelOS Backend Configuration
# Copy this file to .env and adjust values as needed

# Server Configuration
GODELOS_HOST=0.0.0.0
GODELOS_PORT=8000
GODELOS_DEBUG=false
GODELOS_ENVIRONMENT=development

# API Configuration
GODELOS_API_TITLE=GödelOS API
GODELOS_API_DESCRIPTION=Backend API for the GödelOS web demonstration interface
GODELOS_API_VERSION=1.0.0

# CORS Configuration
GODELOS_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
GODELOS_CORS_CREDENTIALS=true

# Logging Configuration
GODELOS_LOG_LEVEL=INFO
GODELOS_LOG_FILE=backend/logs/godelos_backend.log

# GödelOS System Configuration
GODELOS_INIT_TIMEOUT=60
GODELOS_QUERY_TIMEOUT=30
GODELOS_MAX_KNOWLEDGE=1000

# WebSocket Configuration
GODELOS_WS_PING_INTERVAL=30
GODELOS_WS_MAX_CONNECTIONS=100
GODELOS_WS_QUEUE_SIZE=1000

# Performance Configuration
GODELOS_MAX_CONCURRENT_QUERIES=10
GODELOS_CACHE_SIZE=100
GODELOS_CACHE_TTL=300

# Security Configuration (for production)
GODELOS_ENABLE_API_KEY=false
GODELOS_API_KEY=your-secure-api-key-here
GODELOS_RATE_LIMIT=60

# Monitoring Configuration
GODELOS_ENABLE_METRICS=true
GODELOS_METRICS_PORT=8001
GODELOS_HEALTH_CHECK_INTERVAL=30

# Database Configuration (for future use)
# GODELOS_DATABASE_URL=postgresql://user:pass@localhost/godelos
# GODELOS_REDIS_URL=redis://localhost:6379

# LLM Cognitive Architecture Configuration
OPENAI_API_BASE=https://api.synthetic.new/v1
OPENAI_API_KEY=your-api-key-here
OPENAI_MODEL=deepseek-ai/DeepSeek-R1-0528

# Testing Configuration
LLM_TESTING_MODE=false